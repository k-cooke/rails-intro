-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class =>('hilite' if params[:id] == 'title_header')} = link_to 'Movie Title' order: 'title', id:'title_header'
      %th Rating
      %th{:class =>('hilite' if params[:id] == 'release_date__header')} = link_to ('Release Date', order: 'release date', id: 'release_date__header')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
